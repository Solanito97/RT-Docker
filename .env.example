# ===========================================
# RT-Docker Environment Configuration
# ===========================================

# Database Configuration
RT_DATABASE_HOST=db
RT_DATABASE_NAME=rt6
RT_DATABASE_USER=rt_user
RT_DATABASE_PASSWORD=your_secure_password_here

# MySQL Root Password
MYSQL_ROOT_PASSWORD=your_root_password_here

# RT Configuration
RT_ORGANIZATION=example.com
RT_CORRESPOND_ADDRESS=rt@example.com
RT_COMMENT_ADDRESS=rt-comment@example.com
RT_TIMEZONE=UTC

# Web Configuration
RT_WEB_DOMAIN=localhost
RT_WEB_PORT=3002

# Security (for production)
RT_WEB_SECURE_COOKIES=0
RT_WEB_SESSION_TIMEOUT=7200

# Email Configuration
RT_MAIL_COMMAND=sendmail
RT_SENDMAIL_PATH=/usr/sbin/sendmail

# Logging
RT_LOG_LEVEL=info
RT_LOG_TO_FILE=1

# Network Configuration
RT_EXTERNAL_PORT=3001
